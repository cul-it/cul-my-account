= javascript_include_tag 'application'
= javascript_include_tag 'my_account/account'
%h1 My Account

%h3 
  Account information for 
  = "#{@patron['first_name']} #{@patron['last_name']}"

%ul.nav.nav-tabs{:role => "tablist"}
  %li.active{:role => "presentation"}
    = link_to "Checked out (#{@checkouts.count})", "#checkouts", :class => "nav-link active", :data => { :toggle => "tab" }, :role => "tab", :aria => { :controls => "checkouts" }
  %li{:role => "presentation"}
    = link_to 'Available requests', "#available-requests", :class => "nav-link active", :data => { :toggle => "tab" }, :role => "tab", :aria => { :controls => "available requests" }
  %li{:role => "presentation"}
    = link_to 'Pending requests', "#pending-requests", :class => "nav-link active", :data => { :toggle => "tab" }, :role => "tab", :aria => { :controls => "pending requests" }
  %li{:role => "presentation"}
    = link_to 'Fines and fees', "#fines", :class => "nav-link active", :data => { :toggle => "tab" }, :role => "tab", :aria => { :controls => "fines and fees" }

%div.tab-content
  %div#checkouts.tab-pane.fade.in.active{:role => "tabpanel"}
    %table#myaccount-table
      %tbody
        %tr
          %th{:style => "width: 5%"}
            = check_box_tag ''
          %th{:style => "width: 10%"} Due date
          %th{:style => "width: 50%"} Title
          %th{:style => "width: 20%"} Author
          %th{:style => "width: 20%"} Status
        - @checkouts.each do |c|
          %tr
            %td
              = check_box_tag ''
            %td
              =c['od']
            %td 
              = link_to "#{c['ou_title']}", "https://newcatalog.library.cornell.edu/catalog/#{c['bid']}"
            %td
              =c['au']
            %td
              =c['vstatus']
  %div#available-requests.tab-pane.fade{:role => "tabpanel"}
    boo!
